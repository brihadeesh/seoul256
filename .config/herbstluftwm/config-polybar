[global/wm]
margin-top = 0
margin-bottom = 0

############################
######    SETTINGS    ######
############################
[settings]
screenchange-reload = true


############################
######     COLORS     ######
############################
[colors]
background-0 = ${xrdb:background}
background-1 = ${xrdb:background}
foreground = ${xrdb:foreground}
black = ${xrdb:color0}
gray = ${xrdb:color8}
red = ${xrdb:color1}
orange = ${xrdb:color9}
green = ${xrdb:color2}
yellow = ${xrdb:color3}
blue = ${xrdb:color4}
magenta = ${xrdb:color5}
cyan = ${xrdb:color6}
white = ${xrdb:color7}


############################
######    HLWM BAR    ######
############################
[bar/hlwm]
#monitor = eDP1
radius = 0.0
fixed-center = true
bottom = false
height = 16

width = 100%

border-top-size = 3
border-bottom-size = 3
;border-left-size = 2
;border-right-size = 2
border-color = ${colors.background-0}

enable-ipc = true

padding-left = 2
padding-right = 2

module-margin = 1

underline-size = 3


modules-left = workspaces sep spotify
modules-center = date
modules-right = network eth vpn sep volume sep battery sep info

background-0 = ${colors.background-0}
background-1 = ${colors.background-1}
foreground = ${colors.white}

font-0 = "Iosevka Term:weight=Medium:size=7;2"
font-1 = "Siji:style=Regular:pixelsize=9;2"
font-2 = "Iosevka Term:weight=Bold:size=7;2"


cursor-click = pointer

#######################################
######          MODULES          ######
#######################################
[module/info]
type = custom/script
exec = herbstluftwm --version | fold -w 18
interval = 3600
label = %output%
format = <label>
format-foreground = ${colors.red}

[module/sep]
type = custom/script
exec = echo "|"
interval = 500
label-padding = 0

[module/spotify]
type = custom/script
exec = ~/bin/polybar/now_playing
interval = 1
format = <label>
label = " %output%"
;format-prefix = 
format-foreground = ${colors.blue}
click-left = playerctl play-pause
click-right = next


[module/network]
type = internal/network
interface = wlo1

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
label-disconnected = %{T2}%{T-}
label-disconnected-foreground = ${colors.gray}

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-font = 2
ramp-signal-foreground = ${colors.blue}


[module/eth]
type = internal/network
interface = enp1s0


label-connected = 
label-connected-foreground = ${colors.blue}

label-disconnected = 
label-disconnected-foreground = ${colors.gray}

[module/vpn]
type = custom/script
exec = echo ""
exec-if = ps ax | grep [o]penvpn
interval = 5

[module/workspaces]
type = internal/xworkspaces
enable-click = true
enable-scroll = true

format = <label-state>

label-active = %name%
label-active-foreground = ${colors.red}
label-active-padding = 1
label-active-font = 3

;label-occupied = %name%
;label-occupied-foreground = ${colors.foreground}
;label-occupied-padding = 1

label-empty = %name%
label-empty-padding = 1
label-empty-foreground = ${colors.foreground}


[module/xwindow]
type = internal/xwindow
label = " | %title:0:37:...%"
label-empty = "  "
label-empty-foreground = ${colors.yellow}
;label-background = ${colors.gray}
;label-padding = 1
format-prefix = %{F#b5bd68}%{F-}


[module/battery]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 100
interval = 1

format-charging = <label-charging>
label-charging = %{T2}%{F#85add4}%{F- T-} %percentage:3%%

format-discharging = <ramp-capacity> <label-discharging>
label-discharging = %percentage:3%%

format-full = <label-full>
label-full = %{T2}%{F#85add4}%{F- T-} %percentage:3%%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-0-foreground = ${colors.red}
ramp-capacity-foreground = ${colors.blue}
ramp-capacity-font = 2

[module/date]
type = internal/date
date = "%{F#85add4}%a, %b %e%{F-}  |  %{F#dadada}%{T3}%H:%M%%{T-}%{F-}"
interval = 1


[module/updates]
type = custom/script
exec = updates-arch-combined
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"
tail = true
label = %{A1:termite --exec=pacli & disown:}%output%%{A-}

[module/volume]
type = internal/pulseaudio

format-volume = <ramp-volume> <label-volume>
label-volume = %percentage:3%%
label-volume-foreground = ${root.foreground}

format-muted-foreground = ${colors.gray}
label-muted =  %percentage:3%%

ramp-volume-0 = 
ramp-volume-0-foreground = ${colors.blue}
ramp-volume-0-font = 2

[module/backlight]
type = internal/xbacklight
card = intel_backlight
interval = 1
format = <ramp> <label>
scroll-up = "xbacklight -inc 5 -steps 30; notify-send 'brightness up'"
scroll-down = "xbacklight -dec 5 -steps 30; notify-send 'brightness down'"

label = %percentage:3%%

ramp-0 = 
#ramp-0-foreground = ${colors.red}
ramp-1 = 
#ramp-1-foreground = ${colors.orange}
ramp-2 = 
#ramp-2-foreground = ${colors.yellow}
ramp-3 = 
#ramp-3-foreground = ${colors.white}
ramp-font = 2


